{% block ss360_component_product_box_include %}
    {# Includes a custom product-box template defined by the layout variable.
       The standard template is used if no custom layout is set. #}

    {% if layout is empty %}
        {% set layout = 'standard' %}
    {% endif %}

    {% set sizes = {
        'xs': '500px',
        'sm': '315px',
        'md': '390px',
        'lg': '350px',
        'xl': '280px'
    } %}

    {% if layout == 'image' %}
        {% set sizes = {
            'xs': '500px',
            'sm': '500px',
            'md': '390px',
            'lg': '350px',
            'xl': '280px'
        } %}
    {% endif %}

    {% if layout == 'standard' %}
        {% sw_include "@Storefront/storefront/component/product/card/ss360_box-standard.html.twig" %}
    {% elseif layout == 'image' %}
        {% sw_include "@Storefront/storefront/component/product/card/ss360_box-image.html.twig" %}
    {% elseif layout == 'minimal' %}
        {% sw_include "@Storefront/storefront/component/product/card/ss360_box-minimal.html.twig" %}
    {% else %}
        {% set template = "@Storefront/storefront/component/product/card/box-" ~ layout ~ ".html.twig" %}
        {% sw_include template ignore missing %}
    {% endif %}
{% endblock %}
